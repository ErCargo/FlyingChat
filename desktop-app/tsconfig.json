{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": false,
    "noEmitOnError": true,
    "traceResolution": false,
    "lib": ["dom", "es2017"],
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["*-aot.ts", "node_modules", "docs", "aot", "aot-dist"],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
